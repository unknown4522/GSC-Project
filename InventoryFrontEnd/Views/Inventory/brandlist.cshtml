@using InventoryFrontEnd.Models;
@model Modelall
@{
    ViewBag.Title = "brandlist";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
        }

            .sidebar .nav-link {
                color: #495057;
            }

                .sidebar .nav-link.active {
                    background-color: #e9ecef;
                    font-weight: 500;
                }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            transition: all 0.2s ease;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Inventory Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-person-circle me-1"></i>@ViewBag.firstName @ViewBag.LastName</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("logout", "dashboard")"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar pt-4">
                <div class="text-center mb-4">
                    <h5 class="text-primary">@ViewBag.campusName</h5>
                    <small class="text-muted">Campus Dashboard</small>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Dashboard", new { campus_name = ViewBag.campusName })"><i class="bi bi-speedometer2 me-2"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("brandlist", "Inventory", new { campus_name = ViewBag.campusName })"><i class="bi bi-tags me-2"></i>Brand List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Item_list", "Inventory", new { campus_name = ViewBag.campusName })"><i class="bi bi-box-seam me-2"></i>Item List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("rooms", "Inventory", new { campus_name = ViewBag.campusName })"><i class="bi bi-door-open me-2"></i>Room List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("materialslist", "Materials", new { campus_name = ViewBag.campusName })"><i class="bi bi-archive me-2"></i>Materials List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("itemlogs", "Inventory", new { campus_name = ViewBag.campusName })"><i class="bi bi-journal-text me-2"></i>Item Logs</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 py-4">
                <div class="row g-3 mb-4">
                    <div class="card shadow rounded-4">
                        <div class="card-body px-4 py-5">
                            <h2 class="text-center mb-2 text-primary">@ViewBag.campus_name</h2>
                            <h4 class="text-center text-secondary mb-4">Brand List</h4>

                            <div class="row align-items-center mb-4">
                                <div class="col-md-4 mb-2">
                                    <div class="d-flex gap-2">

                                        <button class="btn btn-sm btn-success w-50"
                                                data-bs-toggle="modal" data-bs-target="#btnmodal">
                                            <i class="bi bi-plus-circle"></i> Add
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-4"></div>
                                <div class="col-md-4">
                                    <input type="text" id="tableSearch"
                                           class="form-control form-control-sm shadow-sm"
                                           placeholder="Search brand...">
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle text-center">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Brand Name</th>
                                            @if (Session["UserRole"] != null &&
                                                 Session["UserRole"].ToString() != "IT Asset Incharge" &&
                                                 Session["UserRole"].ToString() != "Apparel Incharge")
                                            {
                                                <th>Action</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var counter = 1;
                                        }
                                        @foreach (var item in Model.Allbrand)
                                        {
                                            <tr class="clickable-row">
                                                <td class="fw-bold">@counter</td>
                                                <td>@item.Brand_name</td>
                                                @if (Session["UserRole"] != null &&
                                                     Session["UserRole"].ToString() != "IT Asset Incharge" &&
                                                     Session["UserRole"].ToString() != "Apparel Incharge")
                                                {
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-primary"
                                                                data-bs-toggle="modal" data-bs-target="#exampleModal"
                                                                onclick="setUpdateFields('@item.Brand_ID', '@item.Brand_name', '@item.Campus_name')">
                                                            Modify
                                                        </button>
                                                    </td>
                                                }
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>
                                </table>

                                <div class="d-flex justify-content-center mt-3">
                                    <nav>
                                        <ul class="pagination pagination-sm" id="pagination"></ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*ADD BRAND MODAL*@
    <div class="modal fade" id="btnmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="Brand_name" placeholder="Brand Name">
                            <label for="Brand_name">Brand Name</label>
                        </div>
                        <div class="form-floating visually-hidden">
                            <input type="text" class="form-control " id="Campus_name" placeholder="Campus Name" value="@ViewBag.Campus_name">
                            <label for="Campus_name">Campus Name</label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-primary" id="addbrandbtn">ADD </button>
                </div>
            </div>
        </div>
    </div>

    @*   UPDATE BRAND NAME   *@
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <input type="text" class="form-control visually-hidden" name="update_brand_id" id="update_brand_id" placeholder="Brand ID">


                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="update_brand" id="update_brand" placeholder="Brand Name">
                        <label for="update_brand">Brand Name</label>
                    </div>
                </div>

                <input type="text" class="form-control visually-hidden" name="update_Campus_name" id="update_Campus_name" placeholder="Brand Name">



                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="updatebtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Modal Dialog -->
    <div class="modal fade" id="model_error" tabindex="-1" aria-labelledby="model_errorLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="model_errorLabel">Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="error_message"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal Dialog -->
    <div class="modal fade" id="model_success" tabindex="-1" aria-labelledby="model_successLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="model_successLabel">Success</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="success_message"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/JS Scripts/brand.js"></script>

</body>
</html>
